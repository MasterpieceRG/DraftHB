<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="20dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/categoriesImage"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/slide_image1_rice_bowl_grilled_chicken_supreme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/categoriesName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/myfont"
        android:padding="2dp"
        android:text="Categories Item Name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/categoriesImage"
        app:layout_constraintStart_toStartOf="@+id/categoriesImage"
        app:layout_constraintTop_toBottomOf="@+id/categoriesImage" />
</androidx.constraintlayout.widget.ConstraintLayout>